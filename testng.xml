<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Automation Framework Test Suite" verbose="1">
    
    <test name="Working API Tests" preserve-order="true">
        <classes>
            <class name="com.apiautomation.framework.tests.WorkingAPITest">
                <methods>
                    <include name="testGetUsers"/>
                    <include name="testGetSpecificUser"/>
                    <include name="testGetPosts"/>
                    <include name="testCreatePost"/>
                    <include name="testUpdatePost"/>
                    <include name="testDeletePost"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Simple Tests" preserve-order="true">
        <classes>
            <class name="com.apiautomation.framework.tests.SimpleWorkingTest">
                <methods>
                    <include name="testBasicFunctionality"/>
                    <include name="testFrameworkSetup"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Minimal Tests" preserve-order="true">
        <classes>
            <class name="com.apiautomation.framework.tests.MinimalWorkingTest">
                <methods>
                    <include name="testBasicAssertion"/>
                    <include name="testStringComparison"/>
                    <include name="testMathOperation"/>
                    <include name="testArrayOperation"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test Parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="qa"/>
    <parameter name="retryCount" value="2"/>
    
    <!-- Listeners -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
</suite> 